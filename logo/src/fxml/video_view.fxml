<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>

<AnchorPane fx:id="videoPane" prefHeight="600" prefWidth="800" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.VideoController">

    <ImageView fx:id="videoImageView" fitHeight="334.0" fitWidth="624.0" layoutX="80.0" layoutY="65.0" />

    <Slider fx:id="seekBar" layoutX="80" layoutY="420" prefWidth="640" />

    <Slider fx:id="volumeSlider" layoutX="80" layoutY="460" onMouseDragged="#handleVolumeChange" onMouseReleased="#handleVolumeChange" prefWidth="200" />

    <Text fx:id="fileNameText" layoutX="80.0" layoutY="529.0" text="No video loaded" />

    <Button layoutX="286.0" layoutY="453.0" onAction="#handleLoadVideo" text="Load Video" />
    <Button layoutX="381.0" layoutY="454.0" onAction="#handlePlay" text="Play" />
    <Button layoutX="442.0" layoutY="453.0" onAction="#handlePause" text="Pause" />
    <Button layoutX="503.0" layoutY="454.0" onAction="#handleBack" text="Back" />
    <Button layoutX="560.0" layoutY="454.0" onAction="#toggleFullScreen" text="Fullscreen" />
</AnchorPane>
