<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="application.controller.LoginController"
            prefHeight="380.0" prefWidth="440.0"
            style="-fx-background-color: linear-gradient(to bottom, #1f2937, #374151);">

    <!-- Uncomment if you want your app header on the login page too -->
    <!--
    <top>
        <fx:include source="header_bar.fxml"/>
    </top>
    -->

    <center>
        <VBox alignment="CENTER" spacing="18" BorderPane.alignment="CENTER">
            <Label text="Welcome to VisionForge!" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #38bdf8;"/>
            <TextField fx:id="usernameField" promptText="Username" maxWidth="250"
                       style="-fx-background-radius: 8; -fx-padding: 8;"/>
            <PasswordField fx:id="passwordField" promptText="Password" maxWidth="250"
                           style="-fx-background-radius: 8; -fx-padding: 8;"/>
            <Label fx:id="errorLabel" textFill="red"/>
            <HBox alignment="CENTER" spacing="12">
                <Button fx:id="loginButton"
                        text="Login"
                        defaultButton="true"
                        onAction="#handleLogin"
                        style="-fx-background-radius: 10; -fx-background-color: #38bdf8; -fx-text-fill: white;"/>
                <Button text="Sign Up"
                        onAction="#handleSignup"
                        style="-fx-background-radius: 10; -fx-background-color: #6ee7b7; -fx-text-fill: #222;"/>
            </HBox>
        </VBox>
    </center>

    <!-- Uncomment if you want your app footer on the login page too -->
    <!--
    <bottom>
        <fx:include source="footer_bar.fxml"/>
    </bottom>
    -->
</BorderPane>
