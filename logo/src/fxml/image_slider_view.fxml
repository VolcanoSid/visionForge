<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="application.controller.ImageSliderView"
            prefHeight="520.0" prefWidth="860.0"
            style="-fx-background-color: linear-gradient(to bottom right, #f3f4f6, #e0e7ef);">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="16" padding="24">
            <Label text="Image Slider" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #1d3557;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Back to Dashboard" onAction="#handleBack"
                    style="-fx-background-radius: 8; -fx-background-color: #fbbf24; -fx-text-fill: #222;"/>
        </HBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="24">
            <HBox alignment="CENTER" spacing="28">
                <Button text="⟨" onAction="#showPrev" style="-fx-font-size: 22px; -fx-background-radius: 50;"/>
                <ImageView fx:id="sliderImage" fitHeight="300" fitWidth="460" preserveRatio="true"
                           style="-fx-effect: dropshadow(gaussian, #bbb, 16, 0, 0, 4);"/>
                <Button text="⟩" onAction="#showNext" style="-fx-font-size: 22px; -fx-background-radius: 50;"/>
            </HBox>
            <HBox spacing="12" alignment="CENTER">
                <Button text="Add Images" onAction="#handleAddImages"
                        style="-fx-background-radius: 8; -fx-background-color: #38bdf8; -fx-text-fill: white;"/>
                <Label fx:id="imageInfoLabel" text="" style="-fx-font-size: 14px; -fx-text-fill: #6366f1;"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
