<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="application.controller.DashboardController"
            prefWidth="1200.0" prefHeight="720.0"
            style="-fx-background-color: linear-gradient(to bottom right, #f8fafc, #f1f5f9);">

    <!-- Header Bar -->
    <HBox prefHeight="60.0" alignment="CENTER_LEFT"
          style="-fx-background-color: #1e293b; -fx-padding: 10 25;">
        <children>
            <Label text="VisionForge Dashboard"
                   style="-fx-font-size: 22px; -fx-text-fill: white; -fx-font-weight: bold;" />
            <Pane HBox.hgrow="ALWAYS" />
            <Button fx:id="refreshBtn" text="âŸ³ Refresh" onAction="#onRefreshClicked"
                    style="-fx-background-color: #3b82f6; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 6 16;" />
            <Button fx:id="profileBtn" text="ðŸ‘¤ Profile" onAction="#onProfileClicked"
                    style="-fx-background-color: #6366f1; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 6 16;" />
        </children>
    </HBox>

    <!-- Sidebar Navigation -->
    <VBox layoutX="0.0" layoutY="60.0" prefWidth="200.0" prefHeight="660.0"
          spacing="18"
          style="-fx-background-color: #111827; -fx-padding: 25;">
        <children>
            <Button text="ðŸ  Home" onAction="#openHome"
                    style="-fx-background-color: #374151; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 10;" />
            <Button text="ðŸ–¼ï¸ Image Editor" onAction="#openImageEditor"
                    style="-fx-background-color: #2563eb; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 10;" />
            <Button text="ðŸŽžï¸ Video Player" onAction="#openVideoPlayer"
                    style="-fx-background-color: #7c3aed; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 10;" />
            <Button text="ðŸ‘¤ Profile" onAction="#openProfile"
                    style="-fx-background-color: #06b6d4; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 10;" />
            <Button text="ðŸ§© Templates" onAction="#openTemplates"
                    style="-fx-background-color: #059669; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 10;" />
            <Button text="âš™ Settings" onAction="#openSettings"
                    style="-fx-background-color: #f59e0b; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 10;" />
            <Button text="ðŸšª Logout" onAction="#handleLogout"
                    style="-fx-background-color: #dc2626; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 10;" />
        </children>
    </VBox>

    <!-- Main Dashboard Area -->
    <ScrollPane layoutX="220.0" layoutY="70.0" prefWidth="950.0" prefHeight="630.0"
                fitToWidth="true" fitToHeight="true"
                style="-fx-background-color: transparent;">
        <content>
            <VBox spacing="30" alignment="TOP_CENTER">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>

                <!-- Greeting -->
                <Label fx:id="greetingLabel" text="Welcome to VisionForge!"
                       style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #1e293b;" />

                <!-- Cards Grid -->
                <GridPane hgap="40.0" vgap="40.0" alignment="CENTER">
                    <children>
                        <StackPane fx:id="photoCard"
                                   style="-fx-background-color: #60a5fa; -fx-background-radius: 15; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10,0,0,3);"
                                   prefWidth="200" prefHeight="120">
                            <children>
                                <VBox alignment="CENTER">
                                    <Label text="ðŸ“¸ Total Photos"
                                           style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" />
                                    <Label fx:id="photoCount" text="0"
                                           style="-fx-font-size: 30px; -fx-font-weight: bold; -fx-text-fill: white;" />
                                </VBox>
                            </children>
                        </StackPane>

                        <StackPane fx:id="videoCard" GridPane.columnIndex="1"
                                   style="-fx-background-color: #a78bfa; -fx-background-radius: 15; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10,0,0,3);"
                                   prefWidth="200" prefHeight="120">
                            <children>
                                <VBox alignment="CENTER">
                                    <Label text="ðŸŽ¬ Total Videos"
                                           style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" />
                                    <Label fx:id="videoCount" text="0"
                                           style="-fx-font-size: 30px; -fx-font-weight: bold; -fx-text-fill: white;" />
                                </VBox>
                            </children>
                        </StackPane>

                        <StackPane fx:id="templateCard" GridPane.rowIndex="1"
                                   style="-fx-background-color: #34d399; -fx-background-radius: 15; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10,0,0,3);"
                                   prefWidth="200" prefHeight="120">
                            <children>
                                <VBox alignment="CENTER">
                                    <Label text="ðŸ§© Templates"
                                           style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" />
                                    <Label fx:id="templateCount" text="0"
                                           style="-fx-font-size: 30px; -fx-font-weight: bold; -fx-text-fill: white;" />
                                </VBox>
                            </children>
                        </StackPane>

                        <StackPane fx:id="userCard" GridPane.columnIndex="1" GridPane.rowIndex="1"
                                   style="-fx-background-color: #fbbf24; -fx-background-radius: 15; -fx-padding: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10,0,0,3);"
                                   prefWidth="200" prefHeight="120">
                            <children>
                                <VBox alignment="CENTER">
                                    <Label text="ðŸ‘¥ Active Users"
                                           style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" />
                                    <Label fx:id="userCount" text="0"
                                           style="-fx-font-size: 30px; -fx-font-weight: bold; -fx-text-fill: white;" />
                                </VBox>
                            </children>
                        </StackPane>
                    </children>
                </GridPane>

                <!-- Chart + Activity Split -->
                <HBox spacing="40" alignment="TOP_CENTER">
                    <!-- Left: Recent Activity -->
                    <VBox alignment="TOP_LEFT" spacing="10">
                        <padding>
                            <Insets top="20" right="20" bottom="20" left="20"/>
                        </padding>
                        <Label text="Recent Work" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #1d3557;"/>
                        <ListView fx:id="recentActivityList" prefHeight="200" prefWidth="500"/>
                        <Button text="Refresh" onAction="#onRefreshClicked"
                                style="-fx-background-radius: 8; -fx-background-color: #38bdf8; -fx-text-fill: white;"/>
                    </VBox>

                    <!-- Right: Chart -->
                    <VBox spacing="10" alignment="CENTER">
                        <Label text="ðŸ“Š Media Distribution"
                               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #1e293b;" />
                        <PieChart fx:id="mediaChart" prefWidth="380" prefHeight="240"
                                  style="-fx-background-color: transparent;" />
                    </VBox>
                </HBox>

                <!-- Bottom System Status -->
                <HBox spacing="30" alignment="TOP_LEFT"
                      style="-fx-background-color: #e2e8f0; -fx-padding: 10 20; -fx-background-radius: 10;">
                    <Label fx:id="dbStatusLabel" text="DB: Connected âœ…"
                           style="-fx-text-fill: #334155; -fx-font-weight: bold;" />
                    <Label fx:id="pluginStatusLabel" text="Plugins: 4 Loaded"
                           style="-fx-text-fill: #334155;" />
                    <Label fx:id="themeStatusLabel" text="Theme: Light"
                           style="-fx-text-fill: #334155;" />
                </HBox>
            </VBox>
        </content>
    </ScrollPane>
</AnchorPane>
