<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.geometry.Insets?>

<AnchorPane prefWidth="400" prefHeight="320" xmlns:fx="http://javafx.com"
            fx:controller="application.controller.SignupController">
    <children>
        <Label text="Sign Up" layoutX="165" layoutY="20" style="-fx-font-size: 20px;"/>
        
        <Label text="Username:" layoutX="60" layoutY="80"/>
        <TextField fx:id="usernameField" layoutX="140" layoutY="75" prefWidth="200"/>
        
        <Label text="Password:" layoutX="60" layoutY="125"/>
        <PasswordField fx:id="passwordField" layoutX="140" layoutY="120" prefWidth="200"/>
        
        <Label text="Email:" layoutX="60" layoutY="170"/>
        <TextField fx:id="emailField" layoutX="140" layoutY="165" prefWidth="200"/>
        
        <Button text="Sign Up" layoutX="140" layoutY="220" prefWidth="200" onAction="#handleSignup"/>
        <Label fx:id="statusLabel" layoutX="60" layoutY="270" prefWidth="280" style="-fx-text-fill: red;"/>
        
        <Button fx:id="backButton" text="Go toLogin" onAction="#handleBackToLogin" />

    </children>
</AnchorPane>
