<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="application.controller.HomeViewController"
            prefWidth="1200.0" prefHeight="720.0"
            style="-fx-background-color: linear-gradient(to bottom right, #f8fafc, #e2e8f0);">

    <!-- Header Bar -->
    <HBox alignment="CENTER_LEFT" prefHeight="60"
          style="-fx-background-color: #1e293b; -fx-padding: 10 25;">
        <children>
            <Label text="ðŸ  Home Dashboard"
                   style="-fx-font-size: 22px; -fx-text-fill: white; -fx-font-weight: bold;" />
            <Pane HBox.hgrow="ALWAYS" />
            <Button text="ðŸ” Refresh" onAction="#handleRefresh"
                    style="-fx-background-radius: 8; -fx-background-color: #3b82f6; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 6 16;" />
            <Button text="ðŸ‘¤ Profile" onAction="#handleProfile"
                    style="-fx-background-radius: 8; -fx-background-color: #6366f1; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 6 16;" />
        </children>
    </HBox>

    <!-- Sidebar -->
    <VBox layoutX="0.0" layoutY="60.0" prefWidth="200.0" prefHeight="660.0"
          spacing="18" style="-fx-background-color: #111827; -fx-padding: 25;">
        <children>
            <Button text="ðŸ–¼ï¸ Image Editor" onAction="#openImageEditor"
                    style="-fx-background-color: #2563eb; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10;"/>
            <Button text="ðŸŽžï¸ Video Player" onAction="#openVideoPlayer"
                    style="-fx-background-color: #7c3aed; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10;"/>
            <Button text="ðŸ§© Templates" onAction="#openTemplates"
                    style="-fx-background-color: #059669; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10;"/>
            <Button text="âš™ Settings" onAction="#openSettings"
                    style="-fx-background-color: #f59e0b; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10;"/>
        </children>
    </VBox>

    <!-- Main Content -->
    <ScrollPane layoutX="220.0" layoutY="70.0" prefWidth="950.0" prefHeight="630.0"
                fitToWidth="true" fitToHeight="true"
                style="-fx-background-color: transparent;">
        <content>
            <VBox spacing="30" alignment="TOP_CENTER">
                <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

                <!-- Greeting -->
                <Label fx:id="greetingLabel" text="Welcome!"
                       style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #1e293b;"/>

                <!-- Stats Cards -->
                <GridPane hgap="40" vgap="40" alignment="CENTER">
                    <children>
                        <StackPane style="-fx-background-color: #60a5fa; -fx-background-radius: 15; -fx-padding: 20;">
                            <children>
                                <VBox alignment="CENTER">
                                    <Label text="ðŸ“¸ Total Photos" style="-fx-text-fill: white; -fx-font-weight: bold;"/>
                                    <Label fx:id="totalPhotosLabel" text="0" style="-fx-font-size: 30px; -fx-text-fill: white; -fx-font-weight: bold;"/>
                                </VBox>
                            </children>
                        </StackPane>

                        <StackPane GridPane.columnIndex="1"
                                   style="-fx-background-color: #a78bfa; -fx-background-radius: 15; -fx-padding: 20;">
                            <children>
                                <VBox alignment="CENTER">
                                    <Label text="ðŸŽ¬ Total Videos" style="-fx-text-fill: white; -fx-font-weight: bold;"/>
                                    <Label fx:id="totalVideosLabel" text="0" style="-fx-font-size: 30px; -fx-text-fill: white; -fx-font-weight: bold;"/>
                                </VBox>
                            </children>
                        </StackPane>

                        <StackPane GridPane.rowIndex="1"
                                   style="-fx-background-color: #34d399; -fx-background-radius: 15; -fx-padding: 20;">
                            <children>
                                <VBox alignment="CENTER">
                                    <Label text="ðŸ§© Templates" style="-fx-text-fill: white; -fx-font-weight: bold;"/>
                                    <Label fx:id="totalTemplatesLabel" text="0" style="-fx-font-size: 30px; -fx-text-fill: white; -fx-font-weight: bold;"/>
                                </VBox>
                            </children>
                        </StackPane>

                        <StackPane GridPane.columnIndex="1" GridPane.rowIndex="1"
                                   style="-fx-background-color: #fbbf24; -fx-background-radius: 15; -fx-padding: 20;">
                            <children>
                                <VBox alignment="CENTER">
                                    <Label text="ðŸ‘¥ Active Users" style="-fx-text-fill: white; -fx-font-weight: bold;"/>
                                    <Label fx:id="activeUsersLabel" text="0" style="-fx-font-size: 30px; -fx-text-fill: white; -fx-font-weight: bold;"/>
                                </VBox>
                            </children>
                        </StackPane>
                    </children>
                </GridPane>

                <!-- Activity and Chart Section -->
                <HBox spacing="40" alignment="TOP_CENTER">
                    <VBox alignment="TOP_LEFT" spacing="10">
                        <Label text="Recent Activity" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                        <ListView fx:id="recentActivityList" prefHeight="200" prefWidth="480"/>
                    </VBox>

                    <VBox alignment="CENTER" spacing="10">
                        <Label text="ðŸ“Š Media Chart" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                        <PieChart fx:id="mediaChart" prefWidth="360" prefHeight="240"/>
                    </VBox>
                </HBox>

                <!-- System Status -->
                <HBox spacing="20" alignment="CENTER_LEFT"
                      style="-fx-background-color: #e2e8f0; -fx-padding: 12; -fx-background-radius: 8;">
                    <Label fx:id="dbStatusLabel" text="DB: Connected âœ…" style="-fx-text-fill: #334155; -fx-font-weight: bold;"/>
                    <Label fx:id="pluginStatusLabel" text="Plugins: 4 Loaded" style="-fx-text-fill: #334155;"/>
                    <Label fx:id="themeStatusLabel" text="Theme: Light" style="-fx-text-fill: #334155;"/>
                </HBox>
            </VBox>
        </content>
    </ScrollPane>
</AnchorPane>
