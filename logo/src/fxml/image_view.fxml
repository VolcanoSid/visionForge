<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="600" prefWidth="900"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="application.controller.ImageController"
            style="-fx-background-color: linear-gradient(to bottom right, #f8fafc, #f1f5f9);">

    <children>

        <!-- Left Sidebar -->
        <VBox layoutX="25" layoutY="40" spacing="10"
              style="-fx-background-color: #1e293b; -fx-padding: 20; -fx-background-radius: 10;">
            <children>
                <Label text="ðŸ–¼ï¸ Tools"
                       style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14;" />
                <Separator />

                <!-- File Controls -->
                <Button text="ðŸ“‚ Load Image" onAction="#handleLoadImage"
                        style="-fx-background-color: #3b82f6; -fx-text-fill: white;"/>
                <Button text="â™» Reset" onAction="#handleReset"
                        style="-fx-background-color: #6366f1; -fx-text-fill: white;"/>
                <Button text="â†© Undo" onAction="#handleUndo"
                        style="-fx-background-color: #f59e0b; -fx-text-fill: white;"/>
                <Button text="â†ª Redo" onAction="#handleRedo"
                        style="-fx-background-color: #10b981; -fx-text-fill: white;"/>

                <Separator />
                <Label text="ðŸŽ¨ Basic Filters"
                       style="-fx-text-fill: white; -fx-font-weight: bold;"/>
                <Button text="Grayscale" onAction="#applyGrayscale"/>
                <Button text="Invert" onAction="#applyInvert"/>
                <Button text="Sepia" onAction="#applySepia"/>
                <Button text="RGB Filter" onAction="#applyRGBFilter"/>
                <Button text="Blur" onAction="#applyBlur"/>
                <Button text="Sharpen" onAction="#applySharpen"/>
                <Button text="Edge Detect" onAction="#applyEdgeDetect"/>
                <Button text="Posterize" onAction="#applyPosterize"/>
                <Button text="Emboss" onAction="#applyEmboss"/>

                <Separator />
                <Label text="âœ¨ Creative Filters"
                       style="-fx-text-fill: white; -fx-font-weight: bold;"/>
                <Button text="Vignette" onAction="#applyVignette"/>
                <Button text="Warm Tone" onAction="#applyWarmTone"/>
                <Button text="Cool Tone" onAction="#applyCoolTone"/>
                <Button text="Noise" onAction="#applyNoise"/>
                <Button text="Pixelate" onAction="#applyPixelate"/>
                <Button text="Fade" onAction="#applyFade"/>

                <Separator />
                <Button text="ðŸ”™ Back" onAction="#handleBack"
                        style="-fx-background-color: #dc2626; -fx-text-fill: white;"/>
            </children>
        </VBox>

        <!-- Image Viewer -->
        <ScrollPane layoutX="230" layoutY="40" prefHeight="480" prefWidth="640"
                    fitToWidth="true" fitToHeight="true"
                    style="-fx-background-color: transparent; -fx-border-color: #cbd5e1; -fx-border-radius: 10;">
            <content>
                <ImageView fx:id="imageView"
                           preserveRatio="true"
                           fitHeight="460"
                           fitWidth="620"
                           style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 8,0,0,2);"/>
            </content>
        </ScrollPane>

        <!-- Sliders -->
        <VBox layoutX="230" layoutY="540" spacing="14">
            <HBox spacing="8">
                <Label text="Brightness:"/>
                <Slider fx:id="brightnessSlider" min="-1" max="1" value="0" prefWidth="200"/>
                <Label fx:id="brightnessLabel" text="0"/>
            </HBox>

            <HBox spacing="8">
                <Label text="Contrast:"/>
                <Slider fx:id="contrastSlider" min="0" max="2" value="1" prefWidth="200"/>
                <Label fx:id="contrastLabel" text="1"/>
            </HBox>

            <HBox spacing="8">
                <Label text="Blur Amount:"/>
                <Slider fx:id="blurSlider" min="0" max="5" value="0" prefWidth="200"/>
                <Label fx:id="blurLabel" text="0"/>
            </HBox>
        </VBox>

    </children>
</AnchorPane>
